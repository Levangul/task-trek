<h4 class="cntr">Sign Up</h4>

<div class="card container mt-4" style="width: 22rem;">

    <form class="loginForm" action="/api/users/login" method="POST">
        <div class="mb-3">
            <input type="text" placeholder="Username" class="form-control input is-medium is-focused loginBtns"
                id="username-reg" name="username">

            <input type="text" placeholder="Email" class="form-control input is-medium is-focused loginBtns"
                id="email-reg" name="email">

            <input type="password" placeholder="Password" class="form-control input is-medium is-focused loginBtns"
                id="password-reg" name="password">

            <button type="submit" class="button is-success submit-btn loginBtns">Sign Up</button>
        </div>
    </form>
</div>

<script src="../public/js/register.js"></script>