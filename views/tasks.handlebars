
{{!-- 
        {{#each tasks}}
        <div class="task">
            <p>{{this.title}}</p>
            <p>Description: {{this.description}}</p>
            <p>Status: {{this.status}}</p>
            <select class="status-select">
                <option value="pending"{{#if (this.status "pending")}} selected{{/if}}>Pending</option>
                <option value="completed"{{#if (this.status "completed")}} selected{{/if}}>Completed</option>
                <option value="inProgress"{{#if (this.status "inProgress")}} selected{{/if}}>In Progress</option>
            </select>
            <button class"update-status">Update Status</button>
        </div>
        {{/each}}

 --}}
