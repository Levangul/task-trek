{{#if logged_in}}
  <div class="tasks-container">
    <div class="modal-content">
      <button id="showFormBtn" class="button is-primary">Add New Task</button>
      <div class="box" id="taskFormContainer" style="display: none;">
        <h2 class="title is-4">New Task</h2>
        <form id="addTaskForm">
          <div class="field">
            <label class="label">Task Name</label>
            <div class="control">
              <input class="input" type="text" name="title" placeholder="Enter task name" required>
            </div>
          </div>
          <div class="field">
            <label class="label">Description</label>
            <div class="control">
              <textarea class="textarea" name="description" placeholder="Enter task description" required></textarea>
            </div>
          </div>
          <div class="field is-grouped">
            <div class="control">
              <button id="addBtn" class="button is-primary" type="submit">Add Task</button>
            </div>
            <div class="control">
              <button id="cancelBtn" class="button is-danger" type="button">Cancel</button>
            </div>
          </div>
        </form>
      </div>
    </div>

    <div class="tasks-list">
      {{#each tasks}}
        <div class="box mt-5" data-task-id="{{this.id}}">
          <h2 class="title is-3">{{this.title}}</h2>
          <p>Status: <span class="task-status">{{this.status}}</span></p>
          <p>Priority: {{this.priority}}</p>
          <p>Start Date: {{this.start_date}}</p>
          <p>Due Date: {{this.due_date}}</p>
          <p>Description: {{this.description}}</p>
          <div class="update-status">
            <form action="/api/tasks/{{this.id}}" method="POST">
              <label for="status-select-{{this.id}}">Update Status:</label>
              <select id="status-select-{{this.id}}" name="status">
                <option value="pending">Pending</option>
                <option value="in progress">In Progress</option>
                <option value="completed">Completed</option>
              </select>
              <button class="update-status-button button is-link" type="submit">Update</button>
            </form>
          </div>
          <button class="delete-task button is-danger">Delete</button>
        </div>
      {{/each}}
    </div>
  </div>
{{/if}}