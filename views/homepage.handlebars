
{{#if logged_in}} <h1> My Tasks</h1>
<div class="d-grid gap-2">
  <button class="btn btn-primary" type="button">Add new task </button>
</div>
<div class="btn-group" role="group" aria-label="Basic mixed styles example">
  <button type="button" id="pending"class="btn btn-info">Pending</button>
  <button type="button" id= "progress"class="btn btn-warning">In Progress</button>
  <button type="button" id= "completed" class="btn btn-success">Completed</button>
</div>

<div>
    <h1>New Task</h1>
    <ul>
        <li>Task Name:{{title}} </li>
        <li>status:{{status}}</li>
        <li>Description:{{description}} </li>
    </ul>
</div>

<div>
    <h1>Pending: {{pending_amt}}</h1>
</div>

<div>
    <h1>In Progress: {{progress_amt}}</h1>
</div>

<div>
    <h1>Completed: {{complete}}</h1>
</div>
{{else}}
<h1>Please log in to view your tasks. (introdution)
    
</h1>
{{/if}}


